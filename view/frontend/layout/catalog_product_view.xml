<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.main">
            <block class="Magento\Framework\View\Element\Template" name="delivery_time"
                    as="delivery_time" template="Ghratzoo_DeliveryTime::html/deliveryTime.phtml" after="product.info.price">
                <arguments>
                    <argument name="viewModel" xsi:type="object">Ghratzoo\DeliveryTime\viewModel\DeliveryTime</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
